<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="controle_projeto_pu" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/db_controle_projeto</jta-data-source>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<class>br.com.controle.model.Alocado</class>
		<class>br.com.controle.model.Bairro</class>
		<class>br.com.controle.model.Idioma</class>
		<class>br.com.controle.model.Cidade</class>
		<class>br.com.controle.model.Colaborador</class>
		<class>br.com.controle.model.Departamento</class>
		<class>br.com.controle.model.Endereco</class>
		<class>br.com.controle.model.Estado</class>
		<class>br.com.controle.model.Projeto</class>
		  <properties>
            <property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
        </properties>
	</persistence-unit>
</persistence>
